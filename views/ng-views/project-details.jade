div.row
    div.col.s2
        h1 {{project.name}}
        button.btn(ng-click="showStageInput()") + Add Stage
    div#add-stage-input.input-field.col.s3(ng-show="stageInput")
        input#add-stage(type="text" ng-model="newStage" ng-keyup="addStageKeyup($event.keyCode)" ng-blur="addStageBlur()")
        label(for="add-stage") Add a Stage to this project

// Pipeline directive
stage-pipeline(data="{{project}}")

// Task directives
div.row
    div.col.s6.tasks-component
        div.row
            div.col.s3
                h2 Tasks
                button.btn(ng-click="showTaskInput()") + Add Task
            div#add-task-input.input-field.col.s9(ng-show="taskInput")
                input#add-task(type="text" ng-model="newTask" ng-keyup="addTaskKeyup($event.keyCode)" ng-blur="addTaskBlur()")
                label(for="add-task") Add a Task to this Stage
        div(ng-repeat="task in project.stages[0].tasks").task
            task(task="task")
            
    div.col.s6.notes-component
        div.row
            div.col.s3
                h2 Notes
                button.btn(ng-click="showNoteInput()") + Add Note
            div#add-note-input.input-field.col.s9(ng-show="noteInput")
                input#add-note(type="text" ng-model="newNote" ng-keyup="addNoteKeyup($event.keyCode)" ng-blur="addNoteBlur()")
                label(for="add-note") Add a Note to this Task
        div(ng-repeat="task in project.stages[0].tasks").task
            task(task="task")
