extends layout

block content
    div.container
        div.row
            form.col.s6
                h4.login-title Login to Spearhead
                div.row
                    div.input-field.col.s10
                        input#login-email(type="email").validate
                        label(for="login-email" data-error="Not a Valid Email Address" data-success="Looks good!") Email
                    div.input-field.col.s10
                        input#login-password(type="password")
                        label(for="login-password") Password
                    div.input-field.col.s10
                        input(type="submit" value="Login").btn

            form.col.s6
                h4.login-title Create a New Account
                div.row
                    div.input-field.col.s10
                        input#signup-email(type="email").validate
                        label(for="signup-email" data-error="Not a Valid Email Address" data-success="Looks good!") Email
                    div.input-field.col.s10
                        input#signup-password(type="password")
                        label(for="signup-password") Password
                    div.input-field.col.s10
                        input(type="submit" value="Create Account").btn