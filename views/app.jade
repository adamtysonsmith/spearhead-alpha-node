extends layout

block content

    body
        div.navbar-fixed
            nav
                div.nav-wrapper
                    a(href="#").brand-logo
                        img(src="/img/spearhead-logo-lt.png").logo-top-nav
                    a(href="#" data-activates="nav-mobile").button-collapse
                        i.material-icons menu
                    ul#nav-desktop.right.hide-on-med-and-down
                        li
                            a(href="/").nav-links About Spearhead
                        li
                            a(href="#").nav-links Account
                        li
                            a(href="/logout").nav-links Logout

                    ul#nav-mobile.side-nav.blue-grey.lighten-4
                        li
                            a(href="/") About Spearhead
                        li
                            a(href="#") Account
                        li
                            a(href="/logout") Logout

        div.row.full-height
            div.col.s1.static-side-nav-col.hide-on-small-only.full-height.blue-grey.darken-4
                ul.static-side-nav
                    a(href="/dashboard#/")
                        li Dashboard
                    a(href="/projects#/")
                        li Projects

            div.col.s11.offset-s1
                // main content in ng-view
                div(ng-view)